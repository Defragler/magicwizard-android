<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FlipLayout">
        <attr name="flipped" format="boolean"/>
    </declare-styleable>
    
    <declare-styleable name="DiceView">
        <attr name="eyeCount" format="integer"/>        
    </declare-styleable>
    
    <declare-styleable name="StateButton">
        <attr name="stateEnabled" format="boolean"/>  
        <attr name="iconEnabled" format="reference"/> 
        <attr name="iconDisabled" format="reference"/>       
    </declare-styleable>
    
    <declare-styleable name="CounterBar">
        <attr name="fontSize" format="integer"/>   
        <attr name="buttonSize" format="dimension|reference"/>  
        <attr name="plusIcon" format="reference"/>   
        <attr name="minusIcon" format="reference"/>
    </declare-styleable>
</resources>
